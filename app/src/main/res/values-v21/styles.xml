<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--沉浸式 5.0以上-->
    <style name="AppTheme" parent="AppTheme.Base">
        <!--设置导航栏透明-->
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
        <!--使状态栏，导航栏可绘制-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <!--设置状态栏颜色为透明-->
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor">@color/_0091ea</item>
    </style>

    <style name="AppTheme.Logon" parent="AppTheme.Base">
        //设置状态栏透明色
        <item name="android:statusBarColor">@color/translucent</item>
    </style>

    <style name="ToolBarStyle" parent="@style/BaseToolBarStyle">
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="LoadingProgressStyle" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:minWidth">20dp</item>
        <item name="android:maxWidth">20dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
        <item name="android:indeterminateTintMode">src_atop</item>
        <item name="android:indeterminateTint">@color/_0091ea</item>
    </style>

</resources>